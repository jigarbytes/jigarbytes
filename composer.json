{
  "name": "jigarbytes/jigarbytes",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://bytestechnolab.com",
  "authors": [
    {
      "name": "Bytes",
      "email": "info@bytestechnolab.com",
      "homepage": "http://bytestechnolab.com"
    }
  ],
  "keywords": [
   "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
   "require": {
    "php": ">=7.1",
    "composer/installers": "dev-master",
    "vlucas/phpdotenv": "dev-master",
    "oscarotero/env": "dev-master",
    "roots/wordpress": "dev-master",
    "roots/wp-config": "dev-master",
    "roots/wp-password-bcrypt": "dev-master"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "dev-master",
    "roave/security-advisories": "dev-master"
  },
  "version": "1.0.1",
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },  
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
